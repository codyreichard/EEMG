@page
@model EEMG_Login.Pages.AdminModel
@{
}

<link rel="stylesheet" href="~/css/admin_page.css" />
<h1> Event Information </h1>
<div class="row">
    <div class="col-md-4">
        <button class="btn btn-info"> Add Event </button>
    </div>

    <div class="col-md-4">
        <button class="btn btn-info"> View Latest Event Stats</button>
    </div>
</div>

<hr />

<h1> User Information </h1>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th> Users </th>
                <th> Role</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var user in Model.Users)
        {
            <tr>
                <td> @user.UserName</td>
                <td> @user.RoleName</td>
                <td style="text-align:center;">
                    <button class="btn btn-primary btn-xs" id="change-membership" value="@user.UserId"> Make Member</button>
                </td>
            </tr>
        }
    </table>
</div>

