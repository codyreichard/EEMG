@page
@model EEMG_Login.Pages.EventDetailsModel

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>
<hr />

<div>
    @foreach (Events events in Model.Events)
    {
    <div class="card">
        <div class="card-body">
            <label class="card-title"> @events.EventTitle</label>
            <label> @events.EventDate.ToShortDateString() </label>
            <div>
                <button class="btn btn-primary" id="download-ppt" value="@events.Id"> Download Event Document</button>
            </div>
        </div>
    </div>
    <br />
    }
</div>


@section scripts {
    <script src="~/js/events.js" > </script>
}
