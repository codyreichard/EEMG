@page
@model EEMG.Pages.CreateEventModel


<h1> Add New Event! </h1>
<hr />

<form method="post" asp-controller="Events" asp-action="AddEvent" enctype="multipart/form-data">
    <div>
        <div class="row">
            <div class="col-md-6">
                <span class="label label-default" style="font-weight:bold; margin-right:2%;">Event Title </span>
                <input type="text" asp-for="EventTitle" class="form-control">
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <span class="label label-default" style="font-weight:bold;">Event Time </span>
                <input type="datetime-local" asp-for="EventTime"
                       name="eventTime"  step="1" value="@DateTime.Now.ToString("s")" class="form-control">
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <span class="label label-default" style="font-weight:bold;">Event Location</span>
                <input type="text" asp-for="EventLocation" class="form-control">
            </div>
        </div>
        <hr />


        <div class="row">
            <div class="col-md-6">
                <span class="label label-default" style="font-weight:bold;">Event File </span>
                <input type="file" asp-for="EventFile" name="eventFile" class="form-control">
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <span class="label label-default" style="font-weight:bold;">Event Speaker</span>
                <input type="text" asp-for="Speaker" class="form-control">
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-lg-12">
                <span class="label label-default" style="font-weight:bold;">Speaker Bio </span>
                @*<input type="text" asp-for="SpeakerBio">*@
                <textarea asp-for="SpeakerBio" rows="5" cols="100" class="form-control"> </textarea>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-4">
                <input type="submit" class="btn btn-success">
            </div>
        </div>
    </div>

</form>